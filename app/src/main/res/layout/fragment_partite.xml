                android:paddingVertical="8dp"
                android:background="@color/material_dynamic_neutral40">

                <!-- Percentuale -->
                <TextView
                    android:id="@+id/torneoLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/torneo"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <!-- Nome del torneo -->
                <TextView
                    android:id="@+id/etTorneo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="---"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Aggiungi altre sezioni seguendo lo stesso modello -->
        </LinearLayout>
    </ScrollView>

    <!-- Box Riepilogo (Fisso in basso) -->
    <TextView
        android:id="@+id/boxRiepilogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/rounded_corner_background"
        android:text="@string/resoconto_partita"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="12dp"
        app:layout_goneMarginBottom="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
