<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TableLayout per contenitore -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_background"
        android:padding="24dp">

        <!-- Prima riga -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <!-- Numero della partita nel campionato -->
            <TextView
                android:id="@+id/numeroPartita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" 1 "
                android:textStyle="bold"
                android:textColor="@color/purple_200"
                android:textSize="16sp" />

            <!-- Data della partita -->
            <TextView
                android:id="@+id/dataPartita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <!-- Esito della partita, spostato a destra -->
            <TextView
                android:id="@+id/esitoPartita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:textColor="@color/red"
                android:text=" L "
                android:textSize="32sp"
                android:textStyle="bold" />
        </TableRow>

        <!-- Seconda riga -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <!-- Squadra Casa -->
            <TextView
                android:id="@+id/squadraCasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="Casa"
                android:textSize="16sp" />

            <!-- Trattino -->
            <TextView
                android:id="@+id/trattino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  -  "
                android:textColor="@color/white"
                android:textSize="16sp" />

            <!-- Squadra Ospite -->
            <TextView
                android:id="@+id/squadraOspite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="Ospite"
                android:textSize="16sp" />

            <!-- Risultato Partita -->
            <TextView
                android:id="@+id/risultatoPartita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:text="(72-49)"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>
</LinearLayout>
